generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  // Quan hệ ngược
  links Link[]
}

model Link {
  id           Int      @id @default(autoincrement())
  title        String
  original_url String
  createdAt    DateTime @default(now())
  userId       Int

  // Quan hệ tới User
  user User @relation(fields: [userId], references: [id])

  // Quan hệ ngược
  clicks      Click[]
  impressions Impression[]
}

model Click {
  id        Int      @id @default(autoincrement())
  linkId    Int
  createdAt DateTime @default(now())
  location  String?

  link Link @relation(fields: [linkId], references: [id])
}

model Impression {
  id        Int      @id @default(autoincrement())
  linkId    Int
  createdAt DateTime @default(now())
  location  String?

  link Link @relation(fields: [linkId], references: [id])
}
